<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.cobam/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".userinfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/font"
        android:text="TIC TAC TOE"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:textColor="@color/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:textColor="@color/font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:text="Player 1"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/player1name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/block_gradient"
            android:hint="Name (0-9) Characters"
            android:singleLine="true"
            android:paddingStart="25dp"
            android:paddingLeft="2dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#A89F9F" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/font"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Player 2"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/player2name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:background="@drawable/block_gradient"
            android:hint="Name (0-9) Characters"
            android:paddingStart="25dp"
            android:paddingLeft="2dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:gravity="center">
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="start"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_rules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Game Rules"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_qt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Quit"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient"/>
</LinearLayout>

</LinearLayout>